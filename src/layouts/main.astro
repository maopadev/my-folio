---
/// Components Reactives
import Navbar from '@components/navigation/navbar.astro';
import BaseHead from '@components/base.astro';
import Footer from '@components/footer.astro';

/// Styles
import '@styles/app.css';

/// Astro Props
interface Props {
  title: string,
  description?: string,
}

const { currentLocale } = Astro;
const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang={ currentLocale }>
	<head>
		<BaseHead title={title} 
			description={description || ''} 
		/>
	</head>
	<body 
		class="relative w-screen min-h-screen overflow-x-hidden bg-[#080808] justify-center items-center 
		align-middle transition-all duration-100 ease-in-out"
	>	
		<!-- Navbar with Responsive Toggle -->
        <Navbar />
		<main 
			id="container"
			class="w-full lg:w-[85%] max-w-[900px] h-auto flex flex-col relative top-10 lg:top-8 left-0 right-0 
			flex-grow mx-auto px-4 gap-y-16 md:gap-y-20 lg:gap-y-26 justify-center items-center align-middle 
			transition-all duration-100 ease-in-out text-white"
		>
        	<slot />
		</main>
		<Footer />
    </body>
</html>