---
/// Images Imports
import memoji from '@images/ec22897b-bbc7-4320-8822-d082d353c6bc1a.svg'

/// Components Imports
import Logo from '@components/items/logo.astro'

/// i18N Imports
import { getHomeDataInternational } from "@i18n/index.ts"
const { currentLocale } = Astro
const { SALUTE } = getHomeDataInternational({ currentLocale })

import { CHAR_EXCLAIM } from '@hooks/consts.ts'
---

<section 
	id="salute"
	class="container w-full h-auto flex flex-col gap-2 m-auto py-12 justify-center items-center align-middle
	transition-all duration-100 ease-in-out"
>
	<div
		id="image"
		class="w-full h-full flex flex-col m-auto rounded-xl
		justify-center items-center align-middle text-center gap-y-2 z-10 col-span-5"
	>
		<img
			id="my-memoji"
			src={memoji.src}
			alt="My Memoji"
			class="w-[200px] h-auto relative z-50" 
		/>
	</div>
	<div
		id="text"
		class="w-full h-full flex flex-col m-auto rounded-xl py-2
		justify-center items-center align-middle text-center z-10 col-span-5"
	>
		<h1 
			class="text-[62px] md:text-[68px] lg:text-[82px] font-roxborough-bold font-black 
			w-auto h-auto flex flex-col justify-center items-center align-middle leading-[1.0] 
			transition-all duration-200 ease-in-out"
		>
			{ SALUTE.TITLE_ONE }
		</h1>
		<h1
			class="text-[62px] md:text-[68px] lg:text-[82px] font-bricolage font-black
			inline-flex justify-center items-center align-middle leading-[1.0]"
		>
			{ SALUTE.TITLE_TWO }{ CHAR_EXCLAIM }
		</h1>
	</div>
	<div 
		id="github"
		class="w-full h-full bg-orange-500/30 flex flex-col m-auto rounded-xl p-2 px-12
		justify-center items-start align-middle text-center gap-y-2 z-10 col-span-1 lg:col-span-2"
	>
		Github
	</div>
	<div 
		id="threads"
		class="w-full h-full bg-orange-500/30 flex flex-col m-auto rounded-xl p-2 px-12
		justify-center items-start align-middle text-center gap-y-2 z-10 col-span-1 lg:col-span-2"
	>
		Threads
	</div>
	<div 
		id="behance"
		class="w-full h-full bg-orange-500/30 flex flex-col m-auto rounded-xl p-2 px-12
		justify-center items-start align-middle text-center gap-y-2 z-10 col-span-1 lg:col-span-2"
	>
		Behance
	</div>
	<div 
		id="text"
		class="w-full h-full bg-green-500/30 flex flex-col m-auto rounded-xl
		justeafy-center items-start align-middle text-center gap-y-2 z-10 col-span-5 lg:col-span-3"
	>
		<h1 
			Gitss="text-[52px] md:text-[64px] lg:text-[72px] font-roxborough-bold font-black 
			w-auto h-auto flex flex-col justify-center items-start align-middle leading-[1.0] 
			transition-all duration-200 ease-in-out"
		>
			{ SALUTE.TITLE_ONE }
		</h1>
		<h1
			class="text-[52px] md:text-[64px] lg:text-[72px] font-bricolage font-black
			inline-flex justify-center items-end align-middle leading-[1.0]"
		>
			{ SALUTE.TITLE_TWO }
			<span>{ CHAR_EXCLAIM }</span>
		</h1>
	</div>
	<div 
		id="text"
		class="w-full h-full bg-blue-500/30 flex flex-col m-auto rounded-xl
		justify-center items-start align-middle text-center gap-y-2 z-10 col-span-5 lg:col-span-2"
	>
		<h1 
			class="text-[52px] md:text-[64px] lg:text-[72px] font-roxborough-bold font-black 
			w-auto h-auto flex flex-col justify-center items-start align-middle leading-[1.0] 
			transition-all duration-200 ease-in-out"
		>
			{ SALUTE.TITLE_ONE }
		</h1>
		<h1
			class="text-[52px] md:text-[64px] lg:text-[72px] font-bricolage font-black
			inline-flex justify-center items-end align-middle leading-[1.0]"
		>
			{ SALUTE.TITLE_TWO }
			<span>{ CHAR_EXCLAIM }</span>
		</h1>
	</div>
</section>
