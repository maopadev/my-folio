---

interface Props {
    contact: string[];
	cv: string[];
}

import ContactIcon from "@components/icons/contact.astro"

const { contact, cv } = Astro.props

---

<div
	id="bento-contact-container"
	class="flex w-full md:max-w-[380px] lg:max-w-[400px] lg:h-full flex-col flex-grow gap-4 rounded-3xl max-mdd:max-w-none justify-center items-start align-middle transition-all duration-200 ease-in-out"
>
	<div
		id="bento-contact"
		class="flex w-full h-auto flex-col gap-x-8 gap-y-8 p-12 rounded-3xl z-10 drop-shadow-2xl justify-start items-start align-middle transition-all duration-200 ease-in-out bg-gradient-to-l from-slate-400/10 dark:from-slate-80/10 from-10% to-gray-300/30 dark:to-slate-600/20 backdrop-blur-[98px]"
	>
		<section>
			<ContactIcon
				class="w-auto h-auto stroke-[4] stroke-lime-500/80 dark:stroke-white transition-all duration-200 ease-in-out" 
			/>
			<h1
				id="bento-contact-title"
				class="w-auto h-auto flex flex-grow flex-wrap relative left-0 right-0 justify-center items-center align-middle gap-x-4 leading-tight transition-all duration-200 ease-in-out z-50 text-[24px] md:text-[26px] lg:text-[30px] font-semibold text-black dark:text-white"
			>
				{ contact[0] }
			</h1>
		</section>
		<button
			name="contact"
			aria-label="Send me a email!"
			class="w-full h-auto text-[20px] md:text-[22px] lg:text-[24px] font-medium inline-flex flex-wrap relative left-0 right-0 justify-center items-center align-middle px-4 p-[1rem] bg-leaf text-white rounded-3xl leading-tight duration-200 ease-in-out z-50 hover:-translate-x-1 hover:-translate-y-1 transition-transform"
		>
			{ contact[1] }
		</button>
	</div>
	<a
		href={cv[1]} 
		target="_blank" 
		rel="noopener noreferrer"
		class="flex w-full h-[7rem] flex-row gap-x-8 p-[0.8rem] px-16 z-10 drop-shadow-2xl rounded-3xl justify-center items-center align-middle bg-gradient-to-l from-slate-400/10 dark:from-leaf/10 from-10% to-gray-300/30 dark:to-leaf/20 backdrop-blur-[98px] hover:text-white dark:hover:text-white hover:bg-lime-300/80 hover:dark:bg-lime-300/80 md:hover:-translate-x-1 hover:-translate-y-1 transform transition-all duration-200 ease-in-out"
		aria-label="Boton de descarga de CV"
	>
		<h1 class="text-[22px] md:text-[24px] lg:text-[26px] text-start leading-tight font-semibold">{cv[0]}</h1>
	</a>
</div>