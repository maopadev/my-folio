---

interface Props {
    social: {
        ID: number;
        TITLE: string;
        HREF: string;
    }[];
}

const { social } = Astro.props

---


<ul
    id="social-list"
    class="w-auto h-auto inline-flex flex-wrap justify-start items-center align-middle gap-2"
>
    {Array.from(social).map((item, index) => (
        <li class="w-full h-full max-w-[180px] flex justify-center items-center align-middle">
            <a
                id={`bento-social-${index}`}
                class={`flex w-auto h-auto flex-col gap-y-1 p-2 mx-auto aspect-square rounded-3xl px-12 bg-slate-50/30 dark:bg-slate-900/30 backdrop-blur-[98px] justify-center items-start align-middle hover:-translate-x-1 hover:-translate-y-1 transition-all duration-200 ease-in-out`}
                href={ item.HREF }
                target="_blank"
                rel="noopener noreferrer"
                aria-label={`Social Item ${index}`}
            >
                <p class="font-bold text-[18px] md:text-[20px] lg:text-[24px]">
                    0{ item.ID }
                    </p>
                <h1 class="text-[18px] md:text-[20px] lg:text-[24px]">
                    { item.TITLE }
                    </h1>
            </a>
        </li>
    ))}
</ul>