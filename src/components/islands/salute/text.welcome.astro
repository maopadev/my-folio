---
interface Props {
    work: string[];
    based: string[];
    image?: string;
}


const { work, based } = Astro.props
---

<div 
	class="w-[90%] md:w-[70%] lg:w-[60%] h-auto flex flex-col relative flex-grow flex-wrap justify-center items-center align-middle gap-y-12 top-16 lg:top-0 z-50"
>
	<div
		id="text-work"
		class="w-full h-auto text-[38px] md:text-[44px] lg:text-[58px] xl:text-[60px] font-playfair italic flex flex-col flex-wrap relative font-bold left-0 right-0 -bottom-8 justify-center items-center align-middle gap-x-8 lg:gap-x-12 leading-none transition-all duration-200 ease-in-out z-50"
	>
		<h1 
			id="title-salute-01"
			class="w-auto flex justify-center items-center align-middle"
		>
			{ work[0] }
		</h1>
		<div 
			id="title-salute-02"
			class="inline-flex flex-wrap justify-center items-center align-middle gap-x-8"
		>
			<h1 
				class="flex font-medium text-[39px] md:text-[45px] lg:text-[57px] xl:text-[59px] font-bricolage pt-2 not-italic"
			>
				{ work[1] }
			</h1>
			<h1 id="title-salute-03">
				{ work[2] }
			</h1>
			<h1 
				id="title-salute-04"
				class="flex font-medium text-[39px] md:text-[45px] lg:text-[57px] xl:text-[59px] font-bricolage not-italic"
			>
				{ work[3] }
			</h1>
		</div>
	</div>
	<div
		id="image-personal"
		class="relative block -mt-6 md:-mt-2 lg:mt-0 overflow-hidden w-full h-auto aspect-square lg:w-[400px] lg:h-[390px] border-[6px] border-solid border-slate-500/60 rounded-[32px] object-cover bg-no-repeat transition-all transform-gpu duration-200 ease-in-out"
	>
		<img 
			class="w-[100%] h-[100%] transition-all duration-200 ease-in-out"
			src="/images/running.webp"
			alt="That's me!"
		/>
		<div class="w-[100%] h-[100%] bg-slate-700/60 bg-cover bg-no-repeat bg-center opacity-70 sepia-0" />
		<div class="glass" />
	</div>
	<div
		id="text-life"
		class="w-[100%] lg:w-[70%] xl:w-[60%] h-auto text-[24px] md:text-[32] lg:text-[40px] xl:text-[45px] font-playfair italic flex flex-row xl:flex-col flex-wrap relative font-bold left-0 right-0 bottom-6 md:bottom-8 lg:bottom-2 text-center justify-center items-center align-middle gap-x-2 md:gap-x-6 xl:gap-x-12 leading-none transition-all duration-200 ease-in-out z-50"
	>
		<h1 
			id="title-salute-01"
			class="font-medium font-bricolage not-italic"
		>
			{ based[0] }
		</h1>
		<h1 class="font-bricolage xl:font-playfair">
			{ based[1] }
		</h1>
	</div>
</div>
