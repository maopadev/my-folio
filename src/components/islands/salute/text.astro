---
interface Props {
	bento: string[];
}

const { bento } = Astro.props
---

<grid
	id="data"
	class="w-full h-auto grid grid-cols-[1fr_0.7fr] relative left-0 right-0 mx-auto gap-x-2 gap-y-2 max-mdd:grid-cols-[1fr] grid-rows-[auto] py-12 flex-wrap justify-center items-center align-middle z-50"
>
	<div
		id="text-intro" 
		class="flex w-full max-w-[746px] flex-col items-start gap-x-8 gap-y-8 p-12 rounded-3xl max-mdd:max-w-none max-md:p-8 bg-slate-50/30 dark:bg-slate-900/30 backdrop-blur-3xl"
	>
		<img
			id="image-profile"
			class="flex w-[108px] h-[108px] overflow-hidden rounded-full transition-all duration-200 ease-in-out"
			src="/images/running.webp"
			alt="That's me!"
		/>
		<p
			id="text"
			class="w-full h-auto text-[24px] md:text-[30px] lg:text-[34px] xl:text-[38px] inline-flex flex-wrap relative font-medium left-0 right-0 justify-start items-start align-middle gap-x-4 leading-tight transition-all duration-200 ease-in-out z-50"
		>
			{ Array.from(bento.NAME_TEXT_ONE).map((text: string, index: number) => (
				(index === 0 || index === 4)  
					? text
					: <strong>{ text }</strong>
			))}
		</p>
	</div>
