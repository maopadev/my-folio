---
interface Props {
	salute: string[];
    work: string[];
    based: string[];
    image?: string;
}

const { salute, work, based } = Astro.props
---

<div
	class="w-[90%] md:w-[70%] lg:w-[60%] h-auto flex flex-col relative flex-grow flex-wrap justify-center items-center align-middle gap-y-12 top-16 lg:top-0 z-50"
>
	<div
		id="text-name"
		class="w-full h-auto text-[38px] md:text-[44px] lg:text-[58px] xl:text-[80px] flex flex-col flex-wrap relative font-bold left-0 right-0 -bottom-8 justify-center items-center align-middle gap-x-8 xl:gap-x-6 leading-none transition-all duration-200 ease-in-out z-50"
	>
		{ Array.from(salute).map((text, index) => (
			<p 
				id={`text-work-${ index + 1 }`}
				class={`${ index === 0 ? 'font-playfair -ml-24' : '' }`}
			>
				{ text }
			</p>
		))}
	</div>
	<div
		id="image-personal"
		class="relative block overflow-hidden w-full h-auto aspect-square lg:w-[400px] lg:h-[390px] object-cover bg-no-repeat rounded-[24px] shadow-2xl transition-all transform-gpu duration-200 ease-in-out"
	>
		<img 
			class="w-[100%] h-[100%] transition-all duration-200 ease-in-out"
			src="/images/running.webp"
			alt="That's me!"
		/>
	</div>
	<div
		id="text-work"
		class="w-[100%] lg:w-[70%] xl:w-[60%] h-auto text-[24px] md:text-[30px] lg:text-[34px] xl:text-[38px] inline-flex flex-wrap relative font-medium left-0 right-0 justify-end items-center align-middle gap-x-8 xl:gap-x-6 leading-none transition-all duration-200 ease-in-out z-50"
	>
		{ Array.from(work).map((text, index) => (
			<p
				id={`text-work-${ index + 1 }`}
				class={`${ index === 2 ? 'font-playfair font-black' : '' }`}
			>
				{ text }
			</p>
		))}
	</div>
	<div
		id="text-based"
		class="w-[100%] lg:w-[70%] xl:w-[60%] h-auto text-[24px] md:text-[30px] lg:text-[34px] xl:text-[38px] inline-flex flex-wrap relative font-medium left-0 right-0 bottom-6 md:bottom-8 lg:bottom-2 text-center justify-end items-center align-middle gap-x-4 leading-none transition-all duration-200 ease-in-out z-50"
	>
		{ Array.from(based).map((text, index) => (
			<p
				id={`text-based-${ index + 1 }`}
				class={`${ index === 2 ? 'font-playfair font-black' : '' }`}
			>
				{ text }
			</p>
		))}
	</div>
</div>
