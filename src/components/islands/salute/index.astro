---

/// Components Imports
import Background from "@/components/islands/salute/background.astro"
import DataWelcomeComponent from "@/components/islands/salute/text.astro"
import TagsWelcomeComponent from "@/components/islands/salute/tags.astro"

/// i18N Imports
import { getHomeDataInternational } from "@i18n/index.ts"

// Get locale selected
const { currentLocale } = Astro
const { SALUTE } = getHomeDataInternational({ currentLocale })

const insert = (arr: string | any[], index: any, ...newItem: any) => [
  // part of the array before the specified index
  ...arr.slice(0, index),
  // inserted item
  ...newItem,
  // part of the array after the specified index
  ...arr.slice(index)
]

// Get the current year
let year = new Date().getFullYear()

// Insert the current year in the tags
let arrTagsWithoutYear = SALUTE.TAGS_PERSONAL
const arrTags = insert(arrTagsWithoutYear, 2, `Â©${year}`)

---

<section 
	id="salute"
	class="w-full h-[95vh] flex mx-auto justify-center items-center align-middle rounded-b-[48px] bg-light dark:bg-slate-700/30 text-black dark:text-white backdrop-blur-xl transition-all duration-100 ease-in-out"
>
	<div 
		id="content" 
		class="container w-full max-w-screen-2xl flex flex-col h-full mx-auto py-20 lg:py-14 justify-center items-center align-middle gap-y-12"
	>
		<DataWelcomeComponent work={SALUTE.TITLE_ONE} based={SALUTE.TITLE_TWO} />
		<TagsWelcomeComponent tags={arrTags} />
	</div>
	<Background />
</section>