---

/// Components Imports
import Background from "@/components/islands/salute/background.astro"
import DataWelcomeComponent from "@/components/islands/salute/bento/index.astro"
import TagsWelcomeComponent from "@/components/islands/salute/tags.astro"

/// i18N Imports
import { getHomeDataInternational } from "@i18n/index.ts"

// Get locale selected
const { currentLocale } = Astro
const { SALUTE } = getHomeDataInternational({ currentLocale })

// Get random background image path
let arrMemoji = SALUTE.BENTO.MEMOJI_ICON
let random = Math.floor(Math.random() * arrMemoji.length)
let images = [arrMemoji[0], arrMemoji[random === 0 ? 1 : random]]

let salute = SALUTE.BENTO.NAME_TEXT_ONE
let social = SALUTE.BENTO.SOCIAL_LINKS
let contact = SALUTE.BENTO.PROJECT_IN_YOUR_MIND
---

<section 
	id="salute"
	class="w-full h-[95vh] flex mx-auto justify-center items-center align-middle rounded-b-[48px] bg-light dark:bg-slate-700/30 text-black dark:text-white backdrop-blur-xl transition-all duration-100 ease-in-out"
>
	<div 
		id="content"
		class="container w-full max-w-screen-2xl flex flex-col h-full mx-auto py-20 lg:py-14 justify-center items-center align-middle gap-y-12"
	>
		<DataWelcomeComponent  {salute} {social} {contact} {images} />
		<TagsWelcomeComponent tags={SALUTE.TAGS_PERSONAL} />
	</div>
	<Background />
</section>