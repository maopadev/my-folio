---
/// Astro Props
interface Props {
  mockup: {
    id: number;
    title: string;
    background: string[];
    repository?: string;
    web?: string;
    tags: string[];
  };
}

/// Get the article element information
const { mockup } = Astro.props
---
<a
	id={`mockup-${mockup.id}`}
	class="flex w-[22rem] aspect-square overflow-hidden rounded-2xl border-none relative cursor-pointer justify-center items-center align-middle transition-all transform-gpu duration-200 ease-in-out"
	href={ mockup.web === "" ? mockup.repository : mockup.web }
	target="_blank"
    rel="noopener noreferrer"
    aria-label={`Repo Item ${mockup.id}`}
>
	<div
		class="w-full h-[100%] flex absolute left-0 right-0 justify-center items-center z-50"
	>
		<div
			id="front"
			class="w-[80%] h-auto relative flex flex-col left-0 right-0 bottom-0 gap-y-4 flex-wrap justify-center items-start align-middle transition-all transform-gpu duration-200 ease-in-out"
		>
			<img
				class="w-auto h-auto max-w-[40%] relative flex top-0 left-0 right-0 bottom-0 justify-center items-center align-middle z-50"
				src={ mockup.title }
				alt="Porfolio Logo"
			/>
			<ul class="w-auto h-auto inline-flex flex-wrap gap-2 gap-x-4 justify-start items-center align-middle z-10">
				{ mockup.tags.map((tag, index) => (
					<li
						id={`${index}`}
						class="text-[#fff] text-sm font-bold relative flex top-0 left-0 right-0 bottom-0 justify-center items-center align-middle z-50 px-4 py-[0.4rem] rounded-3xl bg-slate-800/50 backdrop-filter backdrop-blur-[.5rem]"
					>
						{ tag }
					</li>
				))}
			</ul>
		</div>
	</div>
	<div
		id="back"
		class="w-full h-full bg-cover bg-no-repeat bg-center opacity-70 sepia-0"
		style={{
			background: `radial-gradient(circle, ${mockup.background[0]}, ${mockup.background[1]})`,
			backdropFilter: 'blur(1rem)',
			filter: 'contrast(1.35)',
		}}
	/>
	<div class="glass" />
</a>

<style 
	lang="scss" 
	scoped
>

	:root {
		--color-2: #b39e7925;
		--color-3: #ffffff15;
	}
	
	.glass {
		background: linear-gradient(
			90deg,
			transparent,
			transparent 0.75rem,
			var(--color-3) 2rem
		);
		background-size: 2.5rem 100%;
		height: 100%;
		width: 70%;
		backdrop-filter: blur(.65rem);
		filter: contrast(1.35);
		position: absolute;
		z-index: 49;
		inset: 0;
	}
	
</style>