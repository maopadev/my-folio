---
/// i18N Imports
import { getHomeDataInternational } from "@i18n/index.ts"
const { currentLocale } = Astro
const i18n = getHomeDataInternational({ currentLocale })

let decorator = 'px-6 py-10 border-4 rounded-[18px] border-gray-600/[.50] font-medium italic ' 
	+ 'hover:text-accent-one hover:border-accent-one hover:shadow-xl ' 
	+ 'hover:-translate-x-1 hover:-translate-y-2 transition-all duration-200 ease-in-out'
---

<section 
	id="about"
	class="w-[100%] h-auto m-auto py-16 md:py-20 lg:py-26 flex flex-col gap-y-12 justify-center 
	items-center align-middle transition-all duration-100 ease-in-out bg-transparent backdrop-blur-3xl"
>
	<p
		id=""
		class="text-[16px]"
	>
		{i18n.ABOUT.DESCRIPTION_JOB}
	</p>
	<p
		id=""
		class="text-[16px]"
	>
		{i18n.ABOUT.MY_WORKING}
	</p>
	<p 
		id="cita-decorator" 
		class="text-[16px] px-6 py-10 border-4 rounded-[18px] border-gray-600/[.50] 
		font-medium italic hover:text-white hover:border-white hover:shadow-xl 
		hover:-translate-x-1 hover:-translate-y-2 transition-all duration-200 ease-in-out"
	>
		{i18n.ABOUT.cita}
	</p>
</section>