{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": true,
    "paths": {
      "@components/*": ["./src/components/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@pages/*": ["./src/pages/*"],
      "@styles/*": ["./src/assets/styles/*"],
      "@images/*": ["./src/assets/images/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@db/*": ["./src/db/*"],
      "@i18n/*": ["./src/i18n/*"],
    }
  }
}